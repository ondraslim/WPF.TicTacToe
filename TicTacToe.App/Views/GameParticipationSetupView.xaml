<views:ViewBase x:Class="TicTacToe.App.Views.GameParticipationSetupView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:views="clr-namespace:TicTacToe.App.Views.Common"
                  xmlns:viewModels="clr-namespace:TicTacToe.Core.ViewModels;assembly=TicTacToe.Core"
                  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                  xmlns:l="clr-namespace:TicTacToe.App.Localization"
                  d:DataContext="{d:DesignInstance viewModels:GameParticipationSetupViewModel}"
                  mc:Ignorable="d" 
                  d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="TttBoard" UriSource="../Images/ttt-board.png" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" 
               HorizontalAlignment="Right" VerticalAlignment="Top" 
               Width="150" Height="150" Margin="30" Source="{StaticResource TttBoard}" />
        <TextBlock  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0 50 0 0" Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                    Text="{x:Static l:Texts.GamePart_Title}" />

        <Label Grid.Row="1" Grid.Column="1"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"
               Style="{StaticResource MaterialDesignLabel}" FontSize="20">
            <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="{x:Static l:Texts.GamePart_Creator}" />
        </Label>
        <TextBlock Grid.Row="1" Grid.Column="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" 
                   Style="{StaticResource MaterialDesignBody1TextBlock}" Text="{Binding GameCreator.Name}"/>
        <ToggleButton Grid.Row="1" Grid.Column="3"
                      Style="{StaticResource MaterialDesignActionToggleButton}"
                      IsChecked="{Binding CreatorStarts}"
                      ToolTip="{x:Static l:Texts.GamePart_ToggleTip}"
                      Content="O"
                      materialDesign:ToggleButtonAssist.OnContent="X" />

        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Text="{x:Static l:Texts.GamePart_OpponentWho}" />

        <ComboBox Grid.Row="2" Grid.Column="2" 
                  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"
                  MaxWidth="250"
                  ItemsSource="{Binding UserList}" 
                  SelectedItem="{Binding SelectedOpponent, Mode=TwoWay}"
                  IsEnabled="{Binding CanSelectOpponent}"
                  DisplayMemberPath="Name" />
        <ToggleButton Grid.Row="2" Grid.Column="3"
                      Style="{StaticResource MaterialDesignActionToggleButton}"
                      IsChecked="{Binding OpponentStarts}"
                      ToolTip="{x:Static l:Texts.GamePart_ToggleTip}"
                      Content="O"
                      materialDesign:ToggleButtonAssist.OnContent="X" />

        <TextBlock Grid.Row="3" Grid.Column="1" Margin="5"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   Text="{x:Static l:Texts.GamePart_OpponentName}"/>
        <TextBox Grid.Row="3" Grid.Column="2" Margin="5"
                 materialDesign:HintAssist.Hint="{x:Static l:Texts.GamePart_ExternalOpp}" Width="250"
                 IsEnabled="{Binding CanSelectOpponent}"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Text="{Binding ExternalOpponentName}"/>

        <Button HorizontalAlignment="Center" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                Width="400" Height="50" Margin="40"
                Style="{StaticResource MaterialDesignFlatAccentButton}"
                BorderBrush="Black" BorderThickness="1" Background="{x:Null}" Foreground="Black"
                ToolTip="{x:Static l:Texts.GamePart_StartTip}" Command="{Binding StartGameCommand}">
            <TextBlock Text="{x:Static l:Texts.GamePart_Start}" Style="{StaticResource MaterialDesignBody1TextBlock}" />
        </Button>
    </Grid>
</views:ViewBase>
