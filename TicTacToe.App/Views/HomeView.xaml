<UserControl x:Class="TicTacToe.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:TicTacToe.Core.ViewModels;assembly=TicTacToe.Core"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:HomeViewModel}"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="TttBoard" UriSource="../Images/ttt-board.png" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{StaticResource MaterialDesignHeadline1TextBlock}" FontFamily="#Bradley Hand ITC"
                   FontWeight="Black" FontSize="150"
                   Text="Tic Tac Toe" />

        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="TOP">
            <Image Width="200" Height="200" Margin="5" Source="{StaticResource TttBoard}" />
        </Grid>

        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0 30 0 0" HorizontalAlignment="Center">
            <Label Style="{StaticResource MaterialDesignLabel}" FontSize="30" HorizontalAlignment="Center">
                Who are you?
            </Label>
            <TextBox x:Name="NameTextBox" md:HintAssist.Hint="Name" Width="400"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <PasswordBox x:Name="PasswordTextBox" Width="400"
                         md:HintAssist.Hint="Password"
                         md:HintAssist.Foreground="Black"
                         md:TextFieldAssist.UnderlineBrush="Black"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
            <StackPanel Margin="0 10" Orientation="Horizontal">
                <Button HorizontalAlignment="Center" Width="200" Height="50" Margin="10"
                        Style="{StaticResource MaterialDesignFlatAccentButton}"
                        BorderBrush="Black" BorderThickness="1" Background="{x:Null}" Foreground="Black"
                        ToolTip="Sign In" Command="{Binding SignInCommand}">
                    <TextBlock Text="Sign In" Style="{StaticResource MaterialDesignBody1TextBlock}" />
                </Button>                
                <Button HorizontalAlignment="Center" Width="200" Height="50" Margin="10"
                        Style="{StaticResource MaterialDesignFlatAccentButton}"
                        BorderBrush="Black" BorderThickness="1" Background="{x:Null}" Foreground="Black"
                        ToolTip="Sign Up" Command="{Binding SignUpCommand}">
                    <TextBlock Text="Sign Up" Style="{StaticResource MaterialDesignBody1TextBlock}" />
                </Button>
            </StackPanel>
           
        </StackPanel>

    </Grid>
</UserControl>